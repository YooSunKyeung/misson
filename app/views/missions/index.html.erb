<p id="notice"><%= notice %></p>

 <% if user_signed_in? %>
  <%= link_to '로그아웃', destroy_user_session_path, method: :delete %>
<% else %>
  <%= link_to '로그인', new_user_session_path, method: :get%>
  <%= link_to '회원가입', new_user_registration_path, method: :get%>
<%end%>

<h1>Listing Missions</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @missions.each do |mission| %>
      <tr>
        <td><%= mission.title %></td>
        <td><%= mission.content %></td>
        <td><%= link_to 'Show', mission %></td>
        <td><%= link_to 'Edit', edit_mission_path(mission) %></td>
        <td><%= link_to 'Destroy', mission, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

